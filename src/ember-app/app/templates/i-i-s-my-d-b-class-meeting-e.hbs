<h3 class="ui header">{{t "forms.i-i-s-my-d-b-class-meeting-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-my-d-b-class-meeting-e.meetingDate-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.meetingDate
      class=(if (v-get validationModel "meetingDate" "isInvalid") "error")
      data-test-i-i-s-my-d-b-class-meeting-e-meetingDate=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "meetingDate" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-my-d-b-class-meeting-e.presntation-caption"}}</label>
    {{flexberry-groupedit
      componentName="presntationGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.presntation
      content=model.presntation
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "presntation" "isInvalid") "error")
      data-test-i-i-s-my-d-b-class-meeting-e-presntation=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "presntation" "message")}}
  </div>
</form>
